modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Background Data Collection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Economic Dashboard Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Market Cap Download Server"

[[workflows.workflow]]
name = "Background Data Collection"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python background_data_collector.py --check 15 --update 30"

[[workflows.workflow]]
name = "Economic Dashboard Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Market Cap Download Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python market_cap_download_server.py"
waitForPort = 5001

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

